{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "lib": ["dom", "esnext"],
    "paths": {
      "coco-ioc-container": ["../coco-ioc-container/src"],
      "shared": ["../shared"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist-dts",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true
    // 禁止放开   "paths": {}
  },
  "include": ["src"],
  "exclude": ["src/__tests__"],
  "references": [{ "path": "../coco-ioc-container" }, { "path": "../shared" }]
}
