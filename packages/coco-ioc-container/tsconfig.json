{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "lib": ["dom", "esnext"],
    "paths": {
      "shared": ["../shared"]
    },
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist-dts",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "typeRoots": ["../../types"]
  },
  "include": ["src"],
  "exclude": ["src/__tests__"],
  "references": [{ "path": "../shared" }]
}
