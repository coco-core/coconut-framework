{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "@cocojs/typescript-transformer",
        "transformProgram": true
      }
    ]
  }
}
